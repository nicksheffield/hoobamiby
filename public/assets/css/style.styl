primary = #f1c40f
secondary = #27ae60
fonts = 'Helvetica Neue', Helvetica, Arial, sans-serif
footer_height = 400px


box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments


transition()
	-webkit-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments


*
	box-sizing border-box


html
	height 100%
	overflow hidden


body
	font-family fonts
	background #fff url('../img/whitediamond.png')
	height 100%
	margin 0


button
	font-size 100%
	margin 0
	vertical-align baseline
	cursor pointer


header
	position absolute
	top 0
	right 0
	padding 1em
	z-index 9

	h1
		font-family 'Open Sans', fonts
		font-size 1.3em
		font-weight 100
		margin 0
		line-height 50px
		padding 0 0 0 1em
		float left
		margin-right 2em


	.navbar
		margin 0
		padding 0
		float right
		font-family 'Open Sans', fonts
		color #000

		li
			float right
			line-height 40px
			list-style none
			padding 0 1em
			font-size 0.9em
			cursor pointer
			border 1px solid black

			margin-right 1em

			transition all 0.1s

			&:hover
				background #000
				color #fff
				box-shadow 0 0 10px #000

				-webkit-font-smoothing antialiased


			.fa
				padding-right 1em


			&.icon-only
				.fa
					padding-right 0

			&.slide
				width 3em
				height 3em
				overflow hidden

				transition all 0.1s

				&:hover
					width 140px





	&.dark
		li
			border-color #fff
			color #fff
			background #000

			&:hover
				background #fff
				color #000
				box-shadow 0 0 10px #fff





.panel
	padding 50px


.victory
	text-align center

	h1
		font-size 3em


	p
		font-size 2em



.container
	height 60%
	overflow auto
	position relative

	&.full
		height 100%
		background none


	&.dark
		background url('../img/darkdenim3.png')


	&.narrow
		width -webkit-calc(100% \- 334px)
		width calc(100% \- 334px)



#chat
	width 334px
	position absolute
	top 0
	left 100%
	height 100%
	border-left 1px solid black
	background #fff
	z-index 10

	&.open
		left -webkit-calc(100% \- 334px)
		left calc(100% \- 334px)


	h2
		border-right 1px solid #000
		padding 0.5em
		margin 0
		font-size 1em
		color #FFF
		background #000
		-webkit-font-smoothing antialiased


	.messages
		height -webkit-calc(100% \- 35px \- 35px)
		height calc(100% \- 35px \- 35px)
		overflow-y auto

		.message
			line-height 150%
			font-size 0.8em
			padding 0.5em
			border-bottom 1px solid #EEE

			.inner
				font-family Arial, Helvetica, sans-serif


			.title
				font-weight bold


			&.join
				color #2ecc71 
			&.leave
				color #e74c3c 
			&.point
				color #4aa3df 
			&.win
				color #fff background #000 !important 
			&.fa
				display block !important 
			&.fa .title
				padding-left 1em 



	form
		position absolute
		bottom 0
		left 0
		width 100%

		input[type=text]
			margin 0
			padding 10px
			width -webkit-calc(100% \- 80px)
			width calc(100% \- 80px)
			outline 0
			border 0
			border-top 1px solid black
			display block
			float left


		button
			height 35px
			width 80px
			margin 0
			padding 0
			display block
			border 1px solid black
			background black
			color #fff
			float left



	.handle
		height 100%
		background black
		color #fff
		-webkit-font-smoothing antialiased
		cursor pointer
		position absolute
		top 0
		left 0
		padding 1em



.intro
	text-align center

	h1
		font-size 4em
		font-family 'Open Sans'

		small
			font-size 0.5em
			font-weight normal



	h2
		font-family Roboto
		font-style italic
		font-weight 100


	input
		padding 0.5em 1em
		background rgba(#000, 0)
		border 1px solid #000
		font-size 2em
		outline 0
		margin 1em
		font-weight 100
		font-family Roboto
		text-align center

		&:focus
			background #fff



	button
		background rgba(#000, 0)
		border 1px solid #000
		padding 0.5em 1em
		outline 0
		background #fff
		font-size 1.2em

		transition all 0.1s

		&:hover
			background #000
			color #fff
			box-shadow 0 0 10px #000






.game

	.white, .symbol
		box-shadow 0 0 10px rgba(#000, 0.7)
		margin 32px 0 32px 32px



.browse

	.rooms
		padding 0
		margin 0
		list-style none

		li
			padding 1em
			position relative
			line-height 150%
			width 300px
			border 1px solid #000
			min-height 300px
			float left
			margin 0 1em 2em
			cursor pointer

			transition all 0.1s

			&:hover
				box-shadow 0 0 10px #000

				.join_button
					background #fff
					color #000



			.title
				font-family Roboto
				font-weight 300
				font-size 2em
				line-height 120%
				margin 0 0 1em 0


			.info
				font-size 0.9em


			.join_button
				position absolute
				bottom 0
				left 0
				background #000
				border none
				color #FFF
				-webkit-font-smoothing antialiased
				width 100%
				line-height 2em

				transition all 0.1s


			&.no-games
				background none
				border none





.player
	width 100%
	border-top 1px solid #000
	background #fff url('../img/whitediamond.png')
	height 40%

	&.narrow
		width -webkit-calc(100% \- 334px)
		width calc(100% \- 334px)


	h2
		border-right 1px solid #000
		padding 0.5em
		margin 0
		font-size 1em
		color #FFF
		background #000
		-webkit-font-smoothing antialiased


	.left
		width 20%
		height 100%
		float left


	.right
		width 80%
		height 100%
		float left
		position relative

		&.narrow
			width 60%



	.players
		padding 0em
		margin 0
		height -webkit-calc(100% \- 35px)
		height calc(100% \- 35px)
		overflow auto
		border-right 1px solid #000

		li
			list-style none
			padding 1em
			border-bottom 1px solid #000
			font-size 0.8em

			.fa
				padding-right 1em


			.score
				float right


			&.czar
				font-weight bold
				-webkit-font-smoothing antialiased


			&.winner
				background primary
				color #000




	.hand
		position relative
		height -webkit-calc(100% \- 35px)
		height calc(100% \- 35px)
		overflow auto


	.you-are-czar
		position absolute
		top 35px
		left 0
		width 100%
		height -webkit-calc(100% \- 35px)
		height calc(100% \- 35px)

		background rgba(#fff, 0.8)
		color #000
		text-align center
		font-size 3em
		z-index 9
		padding-top 1em



.setup

	h1
		font-size 3em
		font-weight 100
		font-family Roboto
		margin 0
		padding-bottom 0.5em
		border-bottom 1px solid #DDD
		margin-bottom 0.5em


	.settings, .expansions
		display inline-block
		vertical-align top
		margin-top 0
		width 30%


	form
		padding-bottom 2em
		position relative

		.row
			margin-bottom 1em


		label
			line-height 1.5em




.card
	width 196px
	height 196px
	border 2px solid black
	font-weight bold
	padding 16px
	float left
	margin 8px 0 0 8px
	position relative
	hyphens auto
	cursor pointer

	transition all 0.1s

	&.small
		font-size 0.8em
		width 150px
		height 150px


	&.x-small
		font-size 0.7em
		width 125px
		height 125px
		line-height 150%
		margin 8px 0px 0px 8px


	&.white
		background #fff
		color #000


	&.choose:hover, &.chosen
		background primary
	

	&.chosen:not(.small) .star
		opacity 1
	

	&.black
		background #000
		color #fff
		width 100%
		height auto
		font-size 2em
		font-family Roboto
		font-weight 300
		margin 0
		padding-right 150px
		box-shadow 0 0 10px rgba(#000, 0.7)

		-webkit-font-smoothing antialiased

		&.winner
			background #fff
			color #000
			width 100%
			height auto
			font-size 1em
			font-family arial
			font-weight bold
			-webkit-font-smoothing antialiased
			margin 1em 0
			display none



	&.symbol
		background #eee
		color #000
		font-size 2em
		line-height 164px
		text-align center
		font-weight 400
		cursor default
		-webkit-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none

		.star
			display none 


	footer
		position absolute
		bottom 0.5em
		left 0.5em
		right 0.5em
		text-align right


	.number
		display inline-block
		width 1.5em
		height 1.5em
		border-radius 1em
		text-align center
		line-height 1.5em
		background #fff
		color #000


	span.answer
		color primary

		&.newline
			margin-top 1em
			display block



	.star
		opacity 0

		position absolute
		bottom 0
		left 0
		width 100%
		height 98px
		line-height 98px
		text-align center
		font-size 4em
		color #000
		background transparent
		border-radius 0 0 2px 2px

		transition all 0.1s

		&.show
			opacity 1



	&:[answer]
		cursor pointer



.modal-bg
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(#000, 0.9)


.modal
	width 500px
	min-height 100px
	position absolute
	top 0
	left 50%
	margin-left -250px
	border 1px solid #fff
	color #fff
	border-top none
	padding 0.5em

	text-align center
	line-height 150%
	font-family Roboto
	font-weight 100
	font-size 2em

	button
		font-size 0.5em
		padding 1em 2em
		border none
		background #fff
		color #000
		margin 1em
		outline 0

		.fa
			padding-right 1em


		&:hover
			box-shadow 0 0 5px #fff
